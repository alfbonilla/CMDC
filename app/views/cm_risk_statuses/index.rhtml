<%= stylesheet_link_tag 'cmStyle', :plugin => 'redmine_cm' %>

<h2 class="risks">Risk Statuses Index</h2>

<% if @cm_risk_statuses.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <%= render :partial => 'cm_risk_statuses/list' %>
<% end %>

<%= link_to "Add new Risk status", {:controller => "cm_risk_statuses",
  :action => 'new', :id => @project}, :class => 'icon icon-add' %>

<% html_title "CM - Risk Statuses List" %>
