<% form_tag({}) do -%>	
<div class="autoscroll">
<table class="list">
<thead>
<th><b>Id</b></th>
<th><b>Name</b></th>
<th><b>Description</b></th>
<th><b>Is Closed Status</b></th>
<th><b>Is Default Value</b></th>
<th><b>Edit</b></th>
<th><b>Delete</b></th>
</thead>
<tbody>
<% @cm_risk_statuses.each do |cm_risk_status| %>
  <tr valign="top" class="<%= cycle('odd', 'even') %>">
    <td><%= h(cm_risk_status.id) %></td>
    <td><%= h(cm_risk_status.name) %></td>
    <td><%= h(cm_risk_status.description) %></td>
    <td align="center"><%= image_tag 'true.png' if cm_risk_status.is_closed? %></td>
    <td align="center"><%= image_tag 'true.png' if cm_risk_status.is_default? %></td>
    <% unless cm_risk_status.project_id == 0 %>
    <td align="center"><%= link_to(image_tag('edit.png'), {:controller => 'cm_risk_statuses', :action => 'edit', :id => cm_risk_status}) %></td>
    <td align="center"><%= link_to(image_tag('delete.png'), {:controller => 'cm_risk_statuses', :action => 'destroy', :id => cm_risk_status},:confirm => l(:text_are_you_sure), :method => :post) %></td>
    <% else %>
    <td><small style="font-style: italic">Common Value</small></td>
    <td><small style="font-style: italic">Common Value</small></td>
    <% end %>
  </tr>
<% end %>
</tbody>
</table>
</div>
<% end %>
