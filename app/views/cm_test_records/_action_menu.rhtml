<div class="contextual">
  <%= link_to_if_authorized(l(:button_list), {:controller => 'cm_test_records', :action => 'index', :id => @project }, :class => 'icon icon-multiple') %>
  <%= link_to_if_authorized(l(:button_update), {:controller => 'cm_test_records', :action => 'edit', :id => @cm_test_record }, :onclick => 'showAndScrollTo("update", "notes"); return false;', :class => 'icon icon-edit', :accesskey => accesskey(:edit)) %>
  <%= link_to_if_authorized l(:button_delete), {:controller => 'cm_test_records', :action => 'destroy', :id => @cm_test_record}, :confirm => l(:text_are_you_sure), :method => :post, :class => 'icon icon-del' %>
</div>
