<% labelled_tabular_form_for :cm_test_record, @cm_test_record,
                             :url => {:action => 'edit', :id => @cm_test_record},
                             :html => {:id => 'cm_test_record-form',
                             :class => nil,
                             :multipart => true} do |f| %>

  <%= error_messages_for 'cm_test_record' %>

  <div class="box">
    <fieldset class="tabular"><legend>Record Properties</legend>
      <div id="attributes" class="attributes">
        <%= render :partial => 'attributes', :locals => {:f => f} %>
      </div>
    </fieldset>

    <fieldset><legend>Notes</legend>
      <%= text_area_tag 'notes', @notes, :cols => 60, :rows => 10, :class => 'wiki-edit' %>
      <%= wikitoolbar_for 'notes' %>
      <%= call_hook(:view_cm_test_record_edit_notes_bottom, { :cm_test_record => @cm_test_record, :notes => @notes, :form => f }) %>

      <p><%=l(:label_attachment_plural)%><br /><%= render :partial => 'attachments/form' %></p>
    </fieldset>
    <%= submit_tag l(:button_submit) %>
  </div>

<% end %>