<% labelled_tabular_form_for :cm_risk, @cm_risk,
                         :url => {:action => 'edit', :id => @cm_risk},
                         :html => {:id => 'edit-cm_risk-form',
                                   :class => nil,
                                   :multipart => true} do |f| %>

  <%= error_messages_for 'cm_risk' %>

  <div class="box">
    <fieldset class="tabular"><legend>Risk Properties</legend>
    <div id="attributes" class="attributes">
      <%= render :partial => 'attributes', :locals => {:f => f} %>
    </div>
  </fieldset>

  <div id="relations">
    <%= render :partial => 'relations' %>
  </div>

  <fieldset><legend>Notes</legend>
  <%= text_area_tag 'notes', @notes, :cols => 60, :rows => 10, :class => 'wiki-edit' %>
  <%= wikitoolbar_for 'notes' %>
  <%= call_hook(:view_cm_risks_edit_notes_bottom, { :cm_risk => @cm_risk, :notes => @notes, :form => f }) %>

  <p><%=l(:label_attachment_plural)%><br /><%= render :partial => 'attachments/form' %></p>
  </fieldset>

  <%= submit_tag l(:button_submit) %>
  </div>

<% end %>
