<%= stylesheet_link_tag 'cmStyle', :plugin => 'redmine_cm' %>

<h2 class="ncrs">Non-Conformance Statuses Index</h2>

<% if @cm_ncs_statuses.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <%= render :partial => 'cm_ncs_statuses/list' %>
<% end %>

<%= link_to "Add new Non-Conformance status", {:controller => "cm_ncs_statuses",
  :action => 'new', :id => @project}, :class => 'icon icon-add' %>

<% html_title "CM - NC Statuses List" %>
