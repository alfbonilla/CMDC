<div class="contextual">
  <%= watcher_tag(@cm_req, User.current) %>
  <%= link_to_if_authorized(l(:button_list), {:controller => 'cm_reqs', :action => 'index',
      :id => @project }, :class => 'icon icon-multiple') %>
  <%= link_to_if_authorized(l(:button_update), {:controller => 'cm_reqs', :action => 'edit',
      :id => @cm_req }, :class => 'icon icon-edit') %>
  <%= link_to_if_authorized l(:button_delete), {:controller => 'cm_reqs', :action => 'destroy',
      :id => @cm_req}, :confirm => l(:text_are_you_sure), :method => :post, :class => 'icon icon-del' %>
</div>
