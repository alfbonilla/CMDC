<%= stylesheet_link_tag 'cmStyle', :plugin => 'redmine_cm' %>

<h2 class="changes">Change Statuses Index</h2>

<% if @cm_change_statuses.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <%= render :partial => 'cm_change_statuses/list' %>
<% end %>

<%= link_to "Add new change status",
  {:action => 'new', :id => @project}, :class => 'icon icon-add' %>

<% html_title "CM - Change Statuses List" %>
