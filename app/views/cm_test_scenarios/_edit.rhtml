<% labelled_tabular_form_for :cm_test_scenario, @cm_test_scenario,
                             :url => {:action => 'edit', :id => @cm_test_scenario},
                             :html => {:id => 'cm_test_scenario-form',
                             :class => nil,
                             :multipart => true} do |f| %>

  <%= error_messages_for 'cm_test_scenario' %>

  <div class="box">
    <fieldset class="tabular"><legend>Test Scenario Properties</legend>
      <div id="attributes" class="attributes">
        <%= render :partial => 'attributes', :locals => {:f => f} %>
      </div>
    </fieldset>

    <fieldset><legend>Notes</legend>
      <%= text_area_tag 'notes', @notes, :cols => 60, :rows => 10, :class => 'wiki-edit' %>
      <%= wikitoolbar_for 'notes' %>
      <%= call_hook(:view_cm_test_scenario_edit_notes_bottom, { :cm_test_scenario => @cm_test_scenario, :notes => @notes, :form => f }) %>
    </fieldset>
    <%= submit_tag l(:button_submit) %>
  </div>

<% end %>