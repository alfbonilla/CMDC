<%= stylesheet_link_tag 'cmStyle', :plugin => 'redmine_cm' %>

<h2 class="iitems">Item Classifications Index</h2>

<% if @cm_item_classifications.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <%= render :partial => 'cm_item_classifications/list' %>
<% end %>

<%= link_to "Add new item classification",
  {:action => 'new', :id => @project}, :class => 'icon icon-add' %>

<% html_title "CM - Classifications List" %>
