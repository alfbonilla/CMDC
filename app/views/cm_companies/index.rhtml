<%= stylesheet_link_tag 'cmStyle', :plugin => 'redmine_cm' %>

<h2 class="companies">Companies Index</h2>

<% if @cm_companies.empty? %>
  <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
  <%= render :partial => 'cm_companies/list' %>
<% end %>

<%= link_to "Add new Company", {:controller => "cm_companies",
  :action => 'new', :id => @project}, :class => 'icon icon-add' %>

<% html_title "CM - Companies List" %>