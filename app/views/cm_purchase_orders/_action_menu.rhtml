<div class="contextual">
<%= watcher_tag(@cm_purchase_order, User.current) %>

<%= link_to_if_authorized("Create QR", {:controller => 'cm_qrs', :action => 'new', :id => @project, :x_id => @cm_purchase_order.id,
    :x_type => "PurchaseOrder", :x_name => @cm_purchase_order.title }, :class => 'icon icon-report') %>
<%= link_to_if_authorized(l(:button_list), {:controller => 'cm_purchase_orders', :action => 'index', :id => @project }, :class => 'icon icon-multiple') %>
<%= link_to_if_authorized(l(:button_update), {:controller => 'cm_purchase_orders', :action => 'edit', :id => @cm_purchase_order }, :onclick => 'showAndScrollTo("update", "notes"); return false;', :class => 'icon icon-edit', :accesskey => accesskey(:edit)) %>
<%= link_to_if_authorized l(:button_delete), {:controller => 'cm_purchase_orders', :action => 'destroy', :id => @cm_purchase_order }, :confirm => l(:text_are_you_sure), :method => :post, :class => 'icon icon-del' %>
</div>
